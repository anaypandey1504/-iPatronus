// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  passwordHash  String
  role          UserRole
  status        UserStatus @default(NOT_AVAILABLE)
  doctorSessions    Session[] @relation("DoctorSessions")
  patientSessions   Session[] @relation("PatientSessions")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Session {
  id          String        @id @default(cuid())
  doctorId    String
  doctor      User          @relation("DoctorSessions", fields: [doctorId], references: [id])
  patientId   String
  patient     User          @relation("PatientSessions", fields: [patientId], references: [id])
  roomId      String        @unique
  status      SessionStatus
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

enum UserRole {
  DOCTOR
  PATIENT
}

enum UserStatus {
  AVAILABLE
  NOT_AVAILABLE
  BUSY
}

enum SessionStatus {
  PENDING
  ACCEPTED
  REJECTED
  COMPLETED
}